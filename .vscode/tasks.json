{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++11",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",

        "-o",
        // want to change the output directory later..
        "${fileDirname}/${fileBasenameNoExtension}",

        "-I",
        "/opt/homebrew/opt/openssl@1.1/include",
        "-I",
        "/opt/homebrew/opt/boost@1.76/include",
        
        "-L",
        "/opt/homebrew/opt/openssl@1.1/lib",
        "-L",
        "/opt/homebrew/opt/boost@1.76/lib",

        "-lssl", "-lcrypto"
        
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}